{
    "name": "ttMono",
    "version": "1.0.0",
    "main": "server.js",
    "repository": "git@github.com:manorie/ttMono.git",
    "author": "Mehmet Cetin <mcetin.cm@gmail.com>",
    "license": "GPL-3.0-or-later",
    "private": false,
    "engines": {
        "node": "10.6.0"
    },
    "scripts": {
        "server": "cd api && nodemon server.js",
        "client": "cd client && yarn start",
        "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
        "test": "nyc --reporter=html --reporter=text mocha --recursive --exit",
        "tdd": "mocha --watch --recursive",
        "lint": "eslint .",
        "coverage": "nyc report --reporter=text-lcov | coveralls"
    },
    "dependencies": {
        "express": "^4.16.3"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "chai-http": "^4.0.0",
        "concurrently": "^3.6.1",
        "coveralls": "^3.0.2",
        "eslint": "^5.2.0",
        "eslint-config-airbnb-base": "^13.0.0",
        "eslint-plugin-import": "^2.13.0",
        "mocha": "^5.2.0",
        "mocha-lcov-reporter": "^1.3.0",
        "nyc": "^12.0.2"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ],
            "no-underscore-dangle": [
                "off"
            ]
        }
    }
}
